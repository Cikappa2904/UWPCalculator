<Page x:ConnectionId='1'
    x:Class="Calcolatrice.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Calcolatrice"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:Microsoft.UI.Xaml.Media"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    x:Name="MainPage_Page"
    Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
    mc:Ignorable="d">




    <Grid Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}" ColumnSpacing="10.0">

        <muxc:NavigationView x:ConnectionId='2'
            x:Name="NavigationView"
            HorizontalContentAlignment="Left"
            IsBackButtonVisible="Collapsed"
            PaneDisplayMode="LeftMinimal"
                                               >
            <muxc:NavigationView.MenuItems>
                <muxc:NavigationViewItem
                    Content="Main Page"
                    Icon="Home"
                    Tag="MainPage" />
            </muxc:NavigationView.MenuItems>

            <Frame x:ConnectionId='3' x:Name="MainFrame" Margin="0,0,0,0" />

        </muxc:NavigationView>


    </Grid>



</Page>





