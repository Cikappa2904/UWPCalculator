<Page
    x:Class="Calcolatrice.Calculator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Calcolatrice"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:Microsoft.UI.Xaml.Media"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">
    <Grid ColumnSpacing="10.0" RowSpacing="10.0">
        <!--  Roba di Blend  -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />

        </Grid.RowDefinitions>




        <Button
            x:Name="number1"
            Grid.Row="5"
            Grid.Column="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Click="Button_Click_1"
            Content="1"
            FontSize="16px"
            IsTabStop="False">
            <Button.KeyboardAccelerators>
                <KeyboardAccelerator Key="Number1" Modifiers="None" />
                <KeyboardAccelerator Key="NumberPad1" Modifiers="None" />
            </Button.KeyboardAccelerators>
        </Button>
        <Button
            x:Name="number2"
            Grid.Row="5"
            Grid.Column="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Click="Button_Click_2"
            Content="2"
            FontSize="16px"
            IsTabStop="False">
            <Button.KeyboardAccelerators>
                <KeyboardAccelerator Key="Number2" Modifiers="None" />
                <KeyboardAccelerator Key="NumberPad2" Modifiers="None" />
            </Button.KeyboardAccelerators>
        </Button>
        <Button
            x:Name="number3"
            Grid.Row="5"
            Grid.Column="3"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Click="Button_Click_3"
            Content="3"
            FontSize="16px"
            IsTabStop="False">
            <Button.KeyboardAccelerators>
                <KeyboardAccelerator Key="Number3" Modifiers="None" />
                <KeyboardAccelerator Key="NumberPad3" Modifiers="None" />
            </Button.KeyboardAccelerators>
        </Button>
        <Button
            x:Name="number4"
            Grid.Row="4"
            Grid.Column="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Click="Button_Click_4"
            Content="4"
            FontSize="16px"
            IsTabStop="False">
            <Button.KeyboardAccelerators>
                <KeyboardAccelerator Key="Number4" Modifiers="None" />
                <KeyboardAccelerator Key="NumberPad4" Modifiers="None" />
            </Button.KeyboardAccelerators>
        </Button>
        <Button
            x:Name="number5"
            Grid.Row="4"
            Grid.Column="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Click="Button_Click_5"
            Content="5"
            FontSize="16px"
            IsTabStop="False">
            <Button.KeyboardAccelerators>
                <KeyboardAccelerator Key="Number5" Modifiers="None" />
                <KeyboardAccelerator Key="NumberPad5" Modifiers="None" />
            </Button.KeyboardAccelerators>
        </Button>
        <Button
            x:Name="number6"
            Grid.Row="4"
            Grid.Column="3"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Click="Button_Click_6"
            Content="6"
            FontSize="16px"
            IsTabStop="False">
            <Button.KeyboardAccelerators>
                <KeyboardAccelerator Key="Number6" Modifiers="None" />
                <KeyboardAccelerator Key="NumberPad6" Modifiers="None" />
            </Button.KeyboardAccelerators>
        </Button>
        <Button
            x:Name="number7"
            Grid.Row="3"
            Grid.Column="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Click="Button_Click_7"
            Content="7"
            FontSize="16px"
            IsTabStop="False">
            <Button.KeyboardAccelerators>
                <KeyboardAccelerator Key="Number7" Modifiers="None" />
                <KeyboardAccelerator Key="NumberPad7" Modifiers="None" />
            </Button.KeyboardAccelerators>
        </Button>
        <Button
            x:Name="number8"
            Grid.Row="3"
            Grid.Column="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Click="Button_Click_8"
            Content="8"
            FontSize="16px"
            IsTabStop="False">
            <Button.KeyboardAccelerators>
                <KeyboardAccelerator Key="Number8" Modifiers="None" />
                <KeyboardAccelerator Key="NumberPad8" Modifiers="None" />
            </Button.KeyboardAccelerators>
        </Button>
        <Button
            x:Name="number9"
            Grid.Row="3"
            Grid.Column="3"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Click="Button_Click_9"
            Content="9"
            FontSize="16px"
            IsTabStop="False">
            <Button.KeyboardAccelerators>
                <KeyboardAccelerator Key="Number9" Modifiers="None" />
                <KeyboardAccelerator Key="NumberPad9" Modifiers="None" />
            </Button.KeyboardAccelerators>
        </Button>
        <Button
            x:Name="number0"
            Grid.Row="6"
            Grid.Column="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Click="Button_Click_0"
            Content="0"
            FontSize="16px"
            IsTabStop="False">
            <Button.KeyboardAccelerators>
                <KeyboardAccelerator Key="Number0" Modifiers="None" />
                <KeyboardAccelerator Key="NumberPad0" Modifiers="None" />
            </Button.KeyboardAccelerators>
        </Button>
        <Button
            x:Name="dot"
            Grid.Row="7"
            Grid.Column="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Click="Button_Click_Dot"
            Content=","
            FontSize="16px"
            IsTabStop="False" />

        <TextBlock
            x:Name="risultato"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="1"
            Grid.ColumnSpan="5"
            Margin="0,0,20,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            FontSize="36"
            FontWeight="Bold"
            Text="risultato"
            TextAlignment="Right"
            TextWrapping="Wrap" />

        <!--<TextBlock x:Name="secondoValore" HorizontalAlignment="Right" Grid.Row="1" Grid.Column="3" Text="secondoValore" TextWrapping="Wrap" VerticalAlignment="Bottom" FontSize="28" Grid.ColumnSpan="2" Visibility="Collapsed" />-->

        <Button
            x:Name="equal_sign"
            Grid.Row="6"
            Grid.Column="3"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Click="Button_Click_Uguale"
            Content="="
            FontSize="16px"
            IsTabStop="False"
            Style="{StaticResource AccentButtonStyle}">
            <!--<Button.KeyboardAccelerators>
                <KeyboardAccelerator Key="Enter" Modifiers="None" />
            </Button.KeyboardAccelerators>-->
        </Button>
        <Button
            x:Name="BottonePiu"
            Grid.Row="3"
            Grid.Column="4"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Click="Button_Click"
            Content="+"
            FontSize="16px"
            IsTabStop="False">
            <Button.Background>
                <SolidColorBrush Color="{ThemeResource SystemAltLowColor}" />
            </Button.Background>
            <!--<Button.KeyboardAccelerators>
                <KeyboardAccelerator Modifiers="None" Key="Add"/>
            </Button.KeyboardAccelerators>-->
        </Button>
        <Button
            x:Name="button1"
            Grid.Row="4"
            Grid.Column="4"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Click="Button_Click_Minus"
            Content="-"
            FontSize="16px"
            IsTabStop="False">
            <Button.Background>
                <SolidColorBrush Color="{ThemeResource SystemAltLowColor}" />
            </Button.Background>
            <!--<Button.KeyboardAccelerators>
                <KeyboardAccelerator Key="Subtract" Modifiers="None" />
            </Button.KeyboardAccelerators>-->
        </Button>
        <Button
            x:Name="button2"
            Grid.Row="5"
            Grid.Column="4"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Click="Button_Click_Multiply"
            Content="*"
            FontSize="16px"
            IsTabStop="False">
            <Button.Background>
                <SolidColorBrush Color="{ThemeResource SystemAltLowColor}" />
            </Button.Background>
            <!--<Button.KeyboardAccelerators>
                <KeyboardAccelerator Key="Multiply" Modifiers="None" />
            </Button.KeyboardAccelerators>-->
        </Button>
        <Button
            x:Name="button3"
            Grid.Row="6"
            Grid.Column="4"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Click="Button_Click_Division"
            Content="/"
            FontSize="16px"
            IsTabStop="False">
            <Button.Background>
                <SolidColorBrush Color="{ThemeResource SystemAltLowColor}" />
            </Button.Background>
            <!--<Button.KeyboardAccelerators>
                <KeyboardAccelerator Key="Divide" Modifiers="None" />
            </Button.KeyboardAccelerators>-->
        </Button>


        <Button
            x:Name="button"
            Grid.Row="6"
            Grid.Column="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Click="Button_Click_Delete"
            Content="C"
            FontSize="16px"
            IsTabStop="False">
            <Button.Background>
                <SolidColorBrush Color="{ThemeResource SystemAltLowColor}" />
            </Button.Background>
            <Button.KeyboardAccelerators>
                <KeyboardAccelerator Key="Delete" Modifiers="None" />
            </Button.KeyboardAccelerators>
        </Button>
        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="4"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <TextBlock
                x:Name="primoValore"
                Margin="0,0,10,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                FontSize="16"
                Text="primoValore"
                TextWrapping="Wrap" />
            <TextBlock
                x:Name="segno"
                Margin="0,0,0,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                FontSize="16"
                Text="segno"
                TextWrapping="Wrap" />
            <TextBlock
                x:Name="secondoValore"
                Margin="10,0,0,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                FontSize="16"
                Text="secondoValore"
                TextWrapping="Wrap" />
            <TextBlock
                x:Name="uguale"
                Margin="10,0,0,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                FontSize="16"
                Text="uguale"
                TextWrapping="Wrap" />
        </StackPanel>



        <!--  SelectionChanged="NavigationView_SelectionChanged"  -->
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="Base">
                <VisualState x:Name="Small">
                    <VisualState.Setters>
                        <Setter Target="number7.(Control.FontSize)" Value="8" />
                        <Setter Target="number8.(Control.FontSize)" Value="8" />
                        <Setter Target="number9.(Control.FontSize)" Value="8" />
                        <Setter Target="BottonePiu.(Control.FontSize)" Value="8" />
